                <version>3.11.0</version>
                <configuration>
                    <source>17</source>
                    <target>17</target>
                </configuration>
            </plugin>
        </plugins>
    </build>-->
    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>3.0.2</version> <!-- 与你的Spring Boot版本一致 -->
                <!-- 可选：显式指定主类（若自动检测失败） -->
                <configuration>
                    <mainClass>org.lc.ficq.FicqApplication</mainClass>
                </configuration>
                <!-- 启用打包为可执行JAR -->
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
